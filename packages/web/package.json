{
  "name": "@spek/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n vite,api -c cyan,green \"vite\" \"tsx watch server/index.ts\"",
    "build": "tsc -p tsconfig.json --noEmit && vite build",
    "build:webview": "vite build --config vite.webview.config.ts",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src server --ext .ts,.tsx",
    "format": "prettier --write src server"
  },
  "dependencies": {
    "@spek/core": "*",
    "@types/diff": "^7.0.2",
    "cors": "^2.8.5",
    "diff": "^8.0.3",
    "express": "^4.21.0",
    "fuse.js": "^7.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
