{
  "name": "spek-vscode",
  "displayName": "spek â€” OpenSpec Viewer",
  "description": "Browse OpenSpec specs and changes directly in VS Code",
  "version": "0.6.2",
  "publisher": "kewang",
  "license": "MIT",
  "icon": "icon.png",
  "homepage": "https://github.com/kewang/spek#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kewang/spek.git",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/kewang/spek/issues"
  },
  "keywords": [
    "openspec",
    "spec",
    "bdd",
    "documentation",
    "viewer"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:openspec/config.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spek.open",
        "title": "Open spek",
        "category": "spek"
      },
      {
        "command": "spek.search",
        "title": "Search OpenSpec",
        "category": "spek"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run build -- --watch",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.24.0",
    "@vscode/vsce": "^3.0.0",
    "@spek/core": "*",
    "fuse.js": "^7.0.0"
  }
}
